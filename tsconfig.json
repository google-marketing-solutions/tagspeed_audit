{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "build",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}